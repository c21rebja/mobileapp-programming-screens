<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity"
    android:layout_marginHorizontal="50dp">

    <TextView
        android:id="@+id/disp_story1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/story1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/displaybox_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/disp_story1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/disp_story2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/story2"
        app:layout_constraintTop_toBottomOf="@id/displaybox_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/displaybox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/disp_story2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/disp_story3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/story3"
        app:layout_constraintTop_toBottomOf="@id/displaybox_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/displaybox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/disp_story3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/disp_story4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/story4"
        app:layout_constraintTop_toBottomOf="@id/displaybox_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center" />
</androidx.constraintlayout.widget.ConstraintLayout>